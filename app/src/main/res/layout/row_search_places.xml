<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/dogParkName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/locationPhoto_ImageView"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goNow_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/my_button"
        android:fontFamily="casual"
        android:text="go now"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/locationPhoto_ImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/location_search_places"
        app:civ_shadow="true"
        app:civ_shadow_radius="2dp"
        app:civ_shadow_color="@color/gray"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

