<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_add_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title_add_post_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="casual"
        android:text="@string/new_post"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/upload_im_add_post_screen"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_add_post_screen"
        app:srcCompat="@drawable/upload_im" />

    <ImageView
        android:id="@+id/caption_background_add_post_screen"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_im_add_post_screen"
        app:srcCompat="@drawable/write_caption" />

    <EditText
        android:id="@+id/caption_text_add_post_screen"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:hint="@string/write_cation_here"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:clickable="true"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="@+id/caption_background_add_post_screen"
        app:layout_constraintEnd_toEndOf="@id/caption_background_add_post_screen"
        app:layout_constraintStart_toStartOf="@id/caption_background_add_post_screen"
        app:layout_constraintTop_toTopOf="@id/caption_background_add_post_screen"
        android:focusable="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_im_button_add_post_screen"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/my_button"
        android:fontFamily="casual"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Upload"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caption_background_add_post_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>