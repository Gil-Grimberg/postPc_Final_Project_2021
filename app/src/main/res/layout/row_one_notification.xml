<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/userName_TextView_one_notification_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="@string/user_name"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/profilePhoto_ImageView_one_notification_screen"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_request_button_notification_screen"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/my_button"
        android:fontFamily="casual"
        android:text="@string/confirm"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePhoto_ImageView_one_notification_screen"
        android:layout_width="80dp"
        android:layout_height="800dp"
        android:src="@drawable/default_dog"
        app:civ_shadow="true"
        app:civ_shadow_radius="2dp"
        app:civ_shadow_color="@color/gray"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userName_TextView_one_notification_screen"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

