<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/menuBorderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        tools:background="@color/black"
        />
<!--    todo: remeber that it's belong to the bellow two fragments-->
<!--    class="com.example.centralbark_PostPc_2021.openingFragment"-->
<!--    class="com.example.centralbark_PostPc_2021.menuFragment"-->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/the_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menuBorderLine"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/the_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>