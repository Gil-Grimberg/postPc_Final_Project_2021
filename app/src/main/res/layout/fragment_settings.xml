<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsFragment">


    <TextView
        android:id="@+id/title_setting_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="casual"
        android:text="@string/settings"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/password_logo_setting_screen"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/password_icon"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_logo_setting_screen"
         />

    <TextView
        android:id="@+id/password_option_title_setting_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:text="@string/Password"
        app:layout_constraintStart_toEndOf="@+id/password_logo_setting_screen"
        app:layout_constraintTop_toBottomOf="@id/account_logo_setting_screen"
         />

    <ImageView
        android:id="@+id/enter_to_password_button_setting_screen"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/enter_to_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_to_account_button_setting_screen"
 />

    <ImageView
        android:id="@+id/account_logo_setting_screen"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/account_setting_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_setting_screen" />

    <TextView
        android:id="@+id/account_option_title_setting_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        app:layout_constraintStart_toEndOf="@+id/account_logo_setting_screen"
        app:layout_constraintTop_toBottomOf="@+id/title_setting_screen" />

    <ImageView
        android:id="@+id/enter_to_account_button_setting_screen"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/enter_to_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_setting_screen" />

    <ImageView
        android:id="@+id/about_logo_setting_screen"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/info_icon"
        android:layout_marginStart="40dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_logo_setting_screen"
        />

    <TextView
        android:id="@+id/about_option_title_setting_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:text="@string/about"
        app:layout_constraintStart_toEndOf="@+id/about_logo_setting_screen"
        app:layout_constraintTop_toBottomOf="@id/password_logo_setting_screen"
        />

    <ImageView
        android:id="@+id/enter_to_about_button_setting_screen"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/enter_to_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_to_password_button_setting_screen"
        />


    <View
        android:id="@+id/separator1_setting_screen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_to_about_button_setting_screen"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/log_out_button_setting_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/darkRed"
        android:text="@string/log_out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator1_setting_screen" />
</androidx.constraintlayout.widget.ConstraintLayout>