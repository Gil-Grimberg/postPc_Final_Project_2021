<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".matchAFriendFragment">

    <View
        android:id="@+id/top_seperator_tinder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        />
    <View
        android:id="@+id/bottom_seperator_tinder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        />

    <View
        android:id="@+id/self_summary_seperator_tinder"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_marginBottom="50dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/bottom_seperator_tinder"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_tinder" />

    <View
        android:id="@+id/name_seperator_tinder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/self_summary_seperator_tinder"
        app:layout_constraintTop_toBottomOf="@id/dog_image_tinder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/title_tinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="28dp"
        android:text="Recommended friends\n        just for you"
        app:layout_constraintBottom_toTopOf="@id/top_seperator_tinder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/user_name_tinder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Leo"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_seperator_tinder"
        app:layout_constraintBottom_toTopOf="@id/details_tinder"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/details_tinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="3 \u2022 Rishon Le-Zion \u2022 German Shepherd"
        app:layout_constraintBottom_toTopOf="@id/self_summary_seperator_tinder"
        app:layout_constraintTop_toBottomOf="@id/user_name_tinder"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        />
    <TextView
        android:id="@+id/self_summary_tinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/self_summary_seperator_tinder"
        android:text="My self-summary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/about_me_tinder"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        />
    <TextView
        android:id="@+id/about_me_tinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/self_summary_tinder"
        android:text="I like to run and play with a ball"
        android:fontFamily="casual"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_seperator_tinder"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/x_view_tinder"
        android:layout_width="55dp"
        android:layout_height="90dp"
        android:src="@drawable/x_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_seperator_tinder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="60dp"
        />

    <ImageView
        android:id="@+id/v_view_tinder"
        android:layout_width="55dp"
        android:layout_height="90dp"
        android:src="@drawable/v_icon"
        app:layout_constraintTop_toTopOf="@id/bottom_seperator_tinder"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

        <ImageView
            android:id="@+id/dog_image_tinder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/kevin_profile"
            app:layout_constraintBottom_toTopOf="@id/name_seperator_tinder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_seperator_tinder" />



</androidx.constraintlayout.widget.ConstraintLayout>