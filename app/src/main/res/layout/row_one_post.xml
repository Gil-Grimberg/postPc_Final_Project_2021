<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_image_one_post_screen"
        android:layout_width="80dp"
        android:layout_height="800dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/default_dog"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/gray"
        app:civ_shadow_radius="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_title_textview_one_post_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:textColor="@color/black"
        android:fontFamily="casual"
        android:textSize="17sp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/profile_image_one_post_screen"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/post_image_one_post_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_one_post_screen"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/like_button_one_post_screen"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_image_one_post_screen"
        app:srcCompat="@drawable/like_icon" />

    <TextView
        android:id="@+id/num_of_likes_textview_one_post_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="num of likes"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toEndOf="@+id/like_button_one_post_screen"
        app:layout_constraintTop_toBottomOf="@+id/post_image_one_post_screen" />

    <TextView
        android:id="@+id/post_time_textview_one_post_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="casual"
        android:text="time"
        android:textSize="10sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_content_textview_one_post_screen" />

    <TextView
        android:id="@+id/user_name_content_textview_one_post_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:layout_marginStart="12dp"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/like_button_one_post_screen"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/content_textview_one_post_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/user_name_content_textview_one_post_screen"
        tools:layout_editor_absoluteY="228dp"
        app:layout_constraintTop_toBottomOf="@+id/like_button_one_post_screen"
        android:layout_marginTop="4dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>